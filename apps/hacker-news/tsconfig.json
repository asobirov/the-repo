{
  "extends": "@tr/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "./src/app/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
